<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="108dp"
            android:minLines="2"
            android:text="@string/news_respiratory"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonR25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_respiratory_25"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonR21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_respiratory_21"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonR12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_respiratory_12"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonR9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_respiratory_9"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonR8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_respiratory_8"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxO2Supplement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/ll2"
        android:text="@string/news_o2_supplement"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/ll1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="144dp"
            android:minLines="2"
            android:text="@string/news_systolic_b_p"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupSBP"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonSBP220"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_systolic_b_p_220"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSBP111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_systolic_b_p_111"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSBP101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_systolic_b_p_101"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSBP91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_systolic_b_p_91"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSBP90"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_systolic_b_p_90"
                android:textSize="20sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxO2Supplement"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/ll2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/news_conscience"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupC"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonCA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_conscience_alert"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonCN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="215dp"
                android:text="@string/news_conscience_not_alert"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:minWidth="95dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="108dp"
            android:minWidth="108dp"
            android:text="@string/news_spo2"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupSO"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonSO96"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_spo2_96"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSO94"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_spo2_94"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSO92"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_spo2_92"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonSO91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_spo2_91"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/ll1"
        android:minWidth="115dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="120dp"
            android:minWidth="120dp"
            android:text="@string/news_temperature"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupT"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonT39.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_temperature_39.1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonT38.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_temperature_38.1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonT36.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_temperature_36.1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonT35.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_temperature_35.1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonT35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_temperature_35"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/ll2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="120dp"
            android:minLines="2"
            android:text="@string/news_heart_rate"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupH"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonH131"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_131"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonH111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_111"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonH91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_91"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonH51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_51"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonH41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_41"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonH40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_heart_rate_40"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>