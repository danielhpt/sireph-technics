<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VictimTraumaActivity"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/included"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/layoutTraumaRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <Button
                android:id="@+id/buttonSkull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_skull"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonFace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_face"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonCervical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_cervical"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonThoraxAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_thorax_a_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonLimbSR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_limb_s_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonHypochondriumR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_hypochondrium_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonFlankR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_flank_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonIliacR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_iliac_fossa_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonGenitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_genitals"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonLimbIR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_limb_i_r"
                android:textSize="14sp"
                app:rippleColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iv2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/layoutTraumaLeft"
            android:layout_toEndOf="@id/layoutTraumaRight"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDescription_placeholder"
            android:tint="?android:attr/textColorPrimary"
            app:srcCompat="@drawable/front"
            tools:ignore="UseAppTint" />

        <LinearLayout
            android:id="@+id/layoutTraumaLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonThoraxAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_thorax_a_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonLimbSL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_limb_s_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonEpigastrium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_epigastrium"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonHypochondriumL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_hypochondrium_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonMesogastrium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_mesogastrium"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonFlankL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_flank_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonIliacL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_iliac_fossa_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonHypogastrium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_hypogastrium"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonLimbIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_limb_i_l"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <LinearLayout
                android:id="@+id/layoutBurnArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trauma_total_burn_area"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/totalBurnArea"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="5"
                    android:enabled="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/layoutTraumaBack"
            android:layout_toEndOf="@id/layoutTraumaLeft"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDescription_placeholder"
            android:tint="?android:attr/textColorPrimary"
            app:srcCompat="@drawable/back"
            tools:ignore="UseAppTint" />

        <LinearLayout
            android:id="@+id/layoutTraumaBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:minLines="2"
                android:text="@string/contentDescription_placeholder"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/buttonThoraxP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_thorax_p"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonLumbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_lumbar"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonSacral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_sacral"
                android:textSize="14sp"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/buttonPelvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:minLines="2"
                android:onClick="addTrauma"
                android:text="@string/trauma_body_pelvis"
                android:textSize="14sp"
                app:rippleColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTraumaBack"
            android:layout_alignBottom="@id/layoutTraumaLeft"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/iv2"
            android:gravity="end"
            android:orientation="horizontal">

            <com.evrencoskun.tableview.TableView
                android:id="@+id/content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>